<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context= "com.example.safebusfinalproject.MapViewActivity">

    <!--    tools:context="com.example.safebusfinalproject.MainActivity"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/absentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/투명Button"
            android:text="출석" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/LogoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/투명Button"
            android:text="로그아웃" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tmap_view"
        android:layout_width="match_parent"
        android:layout_height="1500px"
        android:orientation="vertical">
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nowloc"
        android:text="현재위치">
    </Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:id="@+id/res_textview">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/seatBtn"
            android:background="@color/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:padding="2px"
            android:layout_marginEnd="8dp"
            android:radius="4dp"
            android:text="죄석" />

        <Button
            android:id="@+id/messageBtn"
            android:background="@color/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:padding="2px"
            android:radius="4dp"
            android:text="메세지" />

        <Button
            android:id="@+id/businfoBtn"
            android:background="@color/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:padding="2px"
            android:radius="4dp"
            android:text="차량정보" />

        <Button
            android:id="@+id/settingBtn"
            android:background="@color/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:padding="2px"
            android:radius="4dp"
            android:text="환경설정" />
    </LinearLayout>

</LinearLayout>